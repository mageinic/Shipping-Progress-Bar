        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <shippingbar>
            <shippingsection>
                <initial_message>Great news! You're just {{price}} away from qualifying for free shipping!</initial_message>
                <in_progress_message>Almost there! You're just {{price}} away from enjoying free shipping on your order!</in_progress_message>
                <achieved_message>Congratulations! You've reached the {{price}} limit and qualified for our exciting free shipping offer!</achieved_message>
            </shippingsection>
        </shippingbar>
    </default>
</config>
